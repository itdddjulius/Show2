<%= form_with(model: widget, local: true) do |form| %>
  <% if widget.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(widget.errors.count, "error") %> prohibited this widget from being saved:</h2>
      <ul>
        <% widget.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label for="name">Name</label>
    <%= form.text_field :name, class: "form-control", placeholder: "Name", required: true  %>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <%= form.text_field :description, class: "form-control", placeholder: "Description",required: true  %>
  </div>
  <div class="form-group">
    <label for="kind">Kind</label>
    <%= form.select "kind", options_for_select([ "visible", "hidden" ], (widget.kind.present? ? widget.kind : "visible")), {}, :class => 'form-control', include_blank: false, required: true %>
  </div>
  <div class="text-center">
    <%= form.submit button_text, class: "btn btn-primary" %>
    <a href="/my_widgets" class="btn btn-danger" role="button">Back To My Widgets</a>
  </div>
<% end %>
